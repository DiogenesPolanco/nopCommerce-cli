@model Nop.Plugin.Misc.NopCliGeneric.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
    Html.AddCssFileParts("~/Plugins/Misc.NopCliGeneric/Content/styles.css", excludeFromBundle: true);
}

<div class="content-header clearfix">
    <h1 class="pull-left">
        @T("Plugins.Misc.NopCliGeneric")
    </h1>
</div>
<form asp-controller="MiscNopCliGeneric" asp-action="Configure" method="post">
    <div class="content">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <p>
                        @T("Plugins.Misc.NopCliGeneric.Description")
                    </p>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="NopCliGenericToName"/>
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="NopCliGenericToName"/>
                            <span asp-validation-for="NopCliGenericToName"></span>
                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="col-md-9 col-md-offset-3">
                            <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>