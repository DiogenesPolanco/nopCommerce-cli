@model Nop.Plugin.Payments.NopCliGeneric.Models.ConfigurationModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="PaymentNopCliGeneric" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T("Plugins.Payments.NopCliGeneric.Instructions",
                $"{webHelper.GetStoreLocation()}Plugins/PaymentNopCliGeneric/IPNHandler"))
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="UseDevOverrideForStore" asp-input="UseDev"
                            asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="UseDev" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="UseDev" />
                        <span asp-validation-for="UseDev"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="IsStandardOverrideForStore" asp-input="IsStandard"
                            asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="IsStandard" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="IsStandard" />
                        <span asp-validation-for="IsStandard"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>